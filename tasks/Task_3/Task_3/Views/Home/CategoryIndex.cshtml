
@{
    ViewBag.Title = "CategoryIndex";
}

<h2>CategoryIndex</h2>

@if (TempData["Msg"] != null)
{
    <p class="alert alert-success">
        @TempData["Msg"]
    </p>
}

<a href="/Home/CreateCategory" class="btn btn-primary">Create</a>

@if (Model.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td></td>
        </tr>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>
                    <a href="/Home/EditCategory/@s.Id" class="btn btn-success">Edit</a>
                    <a href="/Home/DeleteCategory/@s.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No data</h3>
}

