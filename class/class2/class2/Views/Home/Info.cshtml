
@{
    ViewBag.Title = "Info";
}

<h2>Info</h2>

@Html.ValidationSummary()

<h5>@Request["Name"]</h5>
<h5>@ViewBag.Id</h5>
<h5>@ViewBag.Email</h5>
<h5>@Model.Gender</h5>
<br />

<form method="post">
    <input type="text" name="Name" value="@Model.Name" placeholder="Name" /> <br />
    <p class="text-danger"> @Html.ValidationMessage("Name") </p> 

    <input type="text" name="Id" value="@Model.Id" placeholder="Id" /> <br />
    <p class="text-danger"> @Html.ValidationMessage("Id") </p>

    <input type="text" name="Email" value="@Model.Email" placeholder="Email" /> <br />
    <p class="text-danger" @Html.ValidationMessage("Email")  </p>

    Gender <br />
    <input type="radio" name="Gender" value="Male" /> Male
    <input type="radio" name="Gender" value="Female" /> Female
    <br />
    <p class="text-danger"> @Html.ValidationMessage("Gender") </p>

    <button class="btn btn-primary" type="submit"> Add </button>
</form>
