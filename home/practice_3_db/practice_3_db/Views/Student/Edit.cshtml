
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Name" />
    <input type="text" disabled name="Cgpa" value="@Model.Cgpa" class="form-control" placeholder="Cgpa" />
    <input type="date" name="DOB" value="@Model.DOB.ToString("yyyy-MM-dd")" class="form-control" placeholder="DOB" />
    <input type="submit" value="Add" class="btn btn-primary" />
</form>

